{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
 
<!-- Start Display article for teaser page -->
{% if view_mode == 'teaser' %} 

   <div class="team-block team-v1">
      <div class="team-image">
         {{ content.field_lawyer_profile_image }}
         <div class="socials-team">
            {% if node.field_member_facebook.value %}
               <a class="gva-social" href="{{ node.field_member_facebook.value }}"><i class="fab fa-facebook"></i></a>
            {% endif %} 
            {% if node.field_member_x_handle.value %}
               <a class="gva-social" href="{{ node.field_member_x_handle.value }}"><i class="fab fa-twitter"></i></a>
            {% endif %} 
         </div>
      </div>
      <div class="team-content">
         <h3 class="team-name"><a href="{{ url }}">{{ node.title.value|e }}</a></h3>
         <div class="team-job">{{ node.field_member_licence_type|e }}</div>
         <div class="team-skills">
            {% for item in node.field_lawyer_areas_of_practice %}
               {% set skill = item.value|split('--') %}
               {% if skill['0'] and skill['1'] %}
                  <div class="team-skill">
                     <div class="progress-label">{{ skill['0'] }}</div>
                        <div class="progress">
                           <div class="progress-bar" data-progress-animation="{{ skill['1'] }}%"><span></span></div>
                           <span class="percentage"><span></span>{{ skill['1'] }}%</span>
                     </div>
                  </div>
               {% endif %}  
            {% endfor %} 
         </div>
      </div>
  </div>

{% elseif view_mode == 'teaser_2' %}

<div{{ attributes.addClass(classes) }}>
   <div class="team-block team-two__single">
      <div class="team-two__image">
         {{ content.field_lawyer_profile_image }}
         <div class="team-two__socials">
            <div class="social-control"><i class="fas fa-share-alt"></i></div>
            <div class="social-link">
                {% if node.field_member_facebook.value %}
                   <a class="gva-social" href="{{ node.field_member_facebook.value }}"><i class="fab fa-facebook"></i></a>
                {% endif %} 
                {% if node.field_member_x_handle.value %}
                   <a class="gva-social" href="{{ node.field_member_x_handle.value }}"><i class="fab fa-twitter"></i></a>
                {% endif %} 
            </div>
         </div>
      </div>
      <div class="team-two__content">
        <div class="content-inner">
            <h3 class="team-two__name"><a href="{{ url }}">{{ node.title.value|e }}</a></h3>
            {% if node.field_member_licence_type %}   
            <div class="team-two__job">{{ node.field_member_licence_type|e }}</div>
            {% endif %}
        </div>
      </div>
   </div>
</div>

<!-- End Display article for teaser page -->
{% else %}
<!-- Start Display article for detail page -->

<article{{ attributes.addClass(classes).addClass('node-detail') }}>
  <div class="team-single-page">

    <div class="team-name clearfix">
      <div class="name">{{ node.title.value|e }}</div>
      <div class="job">{{ node.field_member_licence_type|e }}</div>
      <div class="line"><span class="one"></span><span class="second"></span><span class="three"></span></div>
    </div> 
    <div class="team-description">{{ content.body }}</div>
    <div class="team-info">
      <div class="row">
        <div class="col-lg-4 col-sm-12 col-xs-12">
          <div class="team-image">{{ content.field_lawyer_profile_image }}</div>
        </div>
        <div class="col-lg-8 col-sm-12 col-xs-12">
          <div class="team-contact">
            <div class="heading">{{'Contact Info'|t}}</div>
            <div class="content-inner">{{ content.field_team_contact }}</div>
            <div class="socials">
                {% if node.field_member_facebook.value %}
                  <a class="gva-social" href="{{ node.field_member_facebook.value }}"><i class="fab fa-facebook"></i></a>
                {% endif %} 
                  {% if node.field_member_x_handle.value %}
                  <a class="gva-social" href="{{ node.field_member_x_handle.value }}"><i class="fab fa-twitter"></i></a>
                {% endif %} 
            </div>
          </div>
          <div class="team-education">
            <div class="heading">{{'Education'|t}}</div>
            <div class="content-inner">{{ content.field_team_education }}</div>
          </div>
          <div class="team-skills mt-30">
            {% for item in node.field_lawyer_areas_of_practice %}
              {% set skill = item.value|split('--') %}
              {% if skill['0'] and skill['1'] %}
                <div class="team-skill mb-10">
                  <div class="progress-label">{{ skill['0'] }}</div>
                   <div class="progress">
                     <div class="progress-bar" data-progress-animation="{{ skill['1'] }}%"><span></span></div>
                     <span class="percentage"><span></span>{{ skill['1'] }}%</span>
                  </div>
                </div>
              {% endif %}  
            {% endfor %} 
          </div>
        </div>
      </div>
    </div> 

    <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
      {{ content|without('title', 'field_lawyer_profile_image', 'field_lawyer_areas_of_practice',  'field_member_email', 'body', 'comment') }}
    </div>

    <div class="team-quote">quote </div>

    {% if content.comment %}
      <div id="node-single-comment">
        {{ content.comment }}
      </div>
    {% endif %}  

  </div>
</article>

<!-- End Display article for detail page -->
{% endif %}

